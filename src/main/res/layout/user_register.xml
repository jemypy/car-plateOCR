<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150px"
            android:layout_marginTop="40px"
            android:clickable="false"
            android:text="Name"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/reg_name"
            tools:fontFamily="serif"
            tools:layout_editor_absoluteY="62dp" />

        <EditText
            android:id="@+id/reg_name"
            android:layout_width="221dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150px"
            android:layout_marginTop="10px"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="60dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150px"
            android:clickable="false"
            android:padding="10px"
            android:text="Email"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/reg_email"
            tools:fontFamily="serif"
            tools:layout_editor_absoluteY="133dp" />

        <EditText
            android:id="@+id/reg_email"
            android:layout_width="221dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150px"
            android:layout_marginTop="10px"
            android:ems="10"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="133dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150px"
            android:clickable="false"
            android:padding="10px"
            android:text="Phone Number"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/reg_phone"
            tools:fontFamily="serif"
            tools:layout_editor_absoluteY="196dp" />

        <EditText
            android:id="@+id/reg_phone"
            android:layout_width="221dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150px"
            android:layout_marginTop="10px"
            android:ems="10"
            android:inputType="phone"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="205dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150px"
            android:clickable="false"
            android:padding="10px"
            android:text="Role"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/user_role"
            tools:fontFamily="serif"
            tools:ignore="DuplicateIds"
            tools:layout_editor_absoluteY="299dp" />

        <EditText
            android:id="@+id/user_role"
            android:layout_width="221dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150px"
            android:layout_marginTop="10px"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="367dp" />

        <!--<Spinner-->
            <!--android:id="@+id/user_role"-->
            <!--android:layout_width="221dp"-->
            <!--android:layout_height="37dp"-->
            <!--android:layout_marginLeft="60px"-->
            <!--tools:layout_editor_absoluteX="153dp"-->
            <!--tools:layout_editor_absoluteY="297dp" />-->

        <TextView
            android:id="@+id/textView4"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150px"
            android:clickable="false"
            android:padding="10px"
            android:text="Password"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/reg_password"
            tools:fontFamily="serif"
            tools:layout_editor_absoluteY="369dp" />

        <EditText
            android:id="@+id/reg_password"
            android:layout_width="221dp"
            android:layout_height="37dp"
            android:layout_marginLeft="150px"
            android:layout_marginTop="10px"
            android:ems="10"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="367dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150px"
            android:clickable="false"
            android:padding="10px"
            android:text="Retype Password"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/re_password"
            tools:fontFamily="serif"
            tools:layout_editor_absoluteY="440dp" />


        <EditText
            android:id="@+id/re_password"
            android:layout_width="221dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150px"
            android:layout_marginTop="10px"
            android:ems="10"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="449dp" />

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="97dp"
            android:layout_height="59dp"
            android:layout_marginLeft="300px"
            android:layout_marginTop="30px"
            android:background="@color/colorPrimary"
            android:text="Submit"
            android:textColor="#FBFCFC"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="509dp" />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>